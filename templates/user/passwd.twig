{% extends '/base.twig' %}

{% block title %}Nastaviť heslo{% endblock %}

{% block content %}
    <div class="row mt-5">
        <div class="col-md-6 offset-3">
            <div class="card">
                <div class="card-header bg-info text-light">Nastaviť heslo pre {{ username }}</div>
                <div class="card-body">
                    <form action="{{ baseUrl }}/user/passwd" method="post">
                        <input type="hidden" name="username" value="{{ username }}">
                        <div class="form-group">
                            <label for="heslo1">Heslo</label>
                            <input type="text" class="form-control" name="heslo1" id="heslo1"
                                   placeholder="Nové heslo">
                        </div>
                        <div class="form-group">
                            <label for="heslo2">Potvrdiť heslo</label>
                            <input type="text" class="form-control" name="heslo2" id="heslo2"
                                   placeholder="Potvrdiť nové heslo">
                        </div>
                        <button type="submit" class="btn btn-info pull-right">Uložiť</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}