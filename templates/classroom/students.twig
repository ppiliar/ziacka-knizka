{% extends '/base.twig' %}

{% block title %}Zoznam ziakov v triede{% endblock %}

{% block content %}
    <h1>Zoznam ziakov v triede</h1>
    <p>
        <a class="btn btn-success" href="{{ baseUrl }}/user/addStudent"><i class="fa fa-plus"></i>Pridat ziaka do triedy</a>
    </p>
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th>Login</th>
            <th>Meno</th>
            <th>Priezvisko</th>
            <th>Mail</th>
            <th>Rola</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.login }}</td>
                <td>{{ user.meno }}</td>
                <td>{{ user.priezvisko }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ baseUrl }}/classroom/deleteFromClass/username/{{ user.login }}"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}