{% extends '/base.twig' %}

{% block title %}Známky{% endblock %}

{% block content %}
    <h3>Známky na predmete {{ subjectName }}</h3>
    <p>
        <a class="btn btn-danger" href="{{ baseUrl }}/studentMan"><i class="fa fa-arrow-left"></i> Späť</a>
    </p>
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th>Opis</th>
            <th>Známka</th>
            <th>Dátum</th>
        </tr>
        </thead>
        <tbody>
        {% for grade in grades %}
            <tr>
                <td>{{ grade.description }}</td>
                <td>{{ grade.grade }}</td>
                <td>{{ grade.date }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}