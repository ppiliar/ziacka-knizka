{% extends '/base.twig' %}

{% block title %}Zoznam predmetov{% endblock %}

{% block content %}
    <h3>Zoznam predmetov</h3>
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th>Predmet</th>
            <th>Id</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.name }}</td>
                <td>{{ subject.id }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ baseUrl }}/studentMan/subject/subjectid/{{ subject.id }}"><i class="fa fa-graduation-cap"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}